# Example secrets configuration for webhook-scaler
#
# DO NOT commit actual secrets to version control.
# Use this as a template and create your own secrets.yaml with real values.
#
# For production, consider using:
#   - SOPS encryption
#   - External Secrets Operator
#   - Sealed Secrets
#   - HashiCorp Vault
#
# To create secrets manually:
#   kubectl create secret generic webhook-scaler-secrets \
#     --from-literal=webhook-secret='your-webhook-secret-here' \
#     --from-literal=github-token='ghp_your_token_here'
#
---
apiVersion: v1
kind: Secret
metadata:
  name: webhook-scaler-secrets
  labels:
    app: webhook-scaler
    app.kubernetes.io/name: webhook-scaler
    app.kubernetes.io/component: controller
type: Opaque
stringData:
  # GitHub webhook secret (HMAC key for signature validation)
  # Generate with: openssl rand -hex 32
  webhook-secret: "REPLACE_WITH_YOUR_WEBHOOK_SECRET"
  # GitHub fine-grained personal access token
  # Required permissions:
  #   Repository permissions:
  #     - Actions: Read and write
  #     - Administration: Read and write
  github-token: "ghp_REPLACE_WITH_YOUR_GITHUB_TOKEN"
