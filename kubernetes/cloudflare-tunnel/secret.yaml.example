# Secret for Cloudflare Tunnel credentials
# DO NOT commit actual credentials to version control!
#
# The credentials.json file is generated when you create a tunnel:
#   cloudflared tunnel create github-webhooks
#
# It will be saved to ~/.cloudflared/<tunnel-id>.json
#
# To create the secret from the file:
#   kubectl create secret generic cloudflared-credentials \
#     --namespace=github-runners \
#     --from-file=credentials.json=/path/to/<tunnel-id>.json

apiVersion: v1
kind: Secret
metadata:
  name: cloudflared-credentials
  namespace: github-runners
type: Opaque
stringData:
  credentials.json: |
    {
      "AccountTag": "your-account-tag",
      "TunnelID": "your-tunnel-id",
      "TunnelSecret": "your-tunnel-secret"
    }
